<% if current_user %>
  
    <div class="chat-room">
      <nav class="navbar navbar-dark mb-4">
        <span class="navbar-brand">
          Logged in as <%= current_user.username %>, id: <span id="userId"><%= current_user.id %></span>.
          <%= link_to 'Log Out', logout_path %>
        </span>
      </nav>
        <div id="messages">
          <% Message.all.each do |message| %>
            <%= render 'messages/message', message: message %>
          <% end %>
        </div>
      <div class="chat-box">
        <%= render 'messages/form', message: Message.new, user: current_user %>
      </div>
    </div>


<% else if User.all.size > 0%>
      <p class="unauthorized">You have to be autorized to use our service. Please,&nbsp
        <%= link_to 'Sign Up', signup_path, class: "sign-in-link" %> or
        <%= link_to 'Log In', login_path %>
      </p>

  <% else %>
      <p class="unauthorized">Not enough users, please <%= link_to 'Sign Up', signup_path %> </p>
  <% end %>
<% end %>